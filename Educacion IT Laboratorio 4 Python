""" Ejercicio 1: 

def funcion_rango():
    
    x = int(input("Ingrese el inicio de la lista: "))
    y = int(input("Ingrese el numero final de la lista: "))
    z = int(input("Ingrese la escala entre los numeros: "))

    while x <= y:
        print(x)
        x += z

    if(x > y):
        print("El numero inicial debe ser menor al final.")

funcion_rango()

Ejercicio 2:

import time

def temporizador(x,y):
    for i in range(x,y):
        print(i)
        i += 1
        time.sleep(1)

temporizador(0,11)

Ejercicio 3:

import random, tkinter as tk

def dado_aleatorio():
    # Generamos el número.
    resultado = random.randint(1, 6)
    
    # Limpiamos la caja (desde el inicio '0' hasta el final 'end').
    caja_tirar_dado.delete(0, tk.END)
    
    # Insertamos el nuevo número.
    caja_tirar_dado.insert(0, str(resultado))

def salir_consola():
    #Destruimos la ventana. 
    ventana.destroy()

#Ventana.
ventana = tk.Tk()
ventana.config(width = 400, height = 400)
ventana.title("Dado aleatorio")

#Boton tirar_dado.
tirar_dado = tk.Button(text = "Tirar dado", command = dado_aleatorio)
tirar_dado.place(x = 155, y = 100, width = 100, height = 50)

#Boton salir.
salir = tk.Button(text = "Salir", command = salir_consola)
salir.place(x = 330, y = 350, width = 60, height = 40)

#Caja de texto para tirar dado.
caja_tirar_dado = tk.Entry(justify = "center") #Centramos el texto. 
caja_tirar_dado.place(x = 155, y = 160, width = 100, height = 30)

#Mantiene ventana abierta constantemente hasta que se ejecute lo contrario. 
ventana.mainloop()

Ejercicio 4:

import tkinter as tk

def sumar():
    valor1 = int(caja1.get())
    valor2 = int(caja2.get())

    resultado = valor1 + valor2

    # Borramos lo que haya en la caja 3 para que no se amontone
    caja3.delete(0, tk.END)
    
    # Insertamos el resultado en la caja 3
    caja3.insert(0, resultado)

ventana = tk.Tk()
ventana.geometry("500x500")

#Primer caja
caja1 = tk.Entry()
caja1.place(x = 100, y = 200)
etiqueta_caja1 = tk.Label(text = "Primer numero: ")
etiqueta_caja1.place(x = 100, y = 175)

#Segunda caja
caja2 = tk.Entry()
caja2.place(x = 280, y = 200)
etiqueta_caja2 = tk.Label(text = "Segundo numero: ")
etiqueta_caja2.place(x = 280, y = 175)

#Boton suma
boton_suma = tk.Button(text = "Presiona para hacer la suma: ", command = sumar)
boton_suma.place(x = 160, y = 240, width = 180, height = 40)
#Caja boton suma
caja3 = tk.Entry()
caja3.place(x = 160, y = 335, width = 180, height = 40)
etiqueta_caja3 = tk.Label(text = "La suma es: ")
etiqueta_caja3.place(x = 160, y = 310)

#Para que se mantenga abierto. 
ventana.mainloop()

# Ejercicio 5:

import random

print("\nJUEGO DE ADIVINAR EL NUMERO.")

numero_aleatorio = random.randint(10,40)

for i in range(5):
    intento = int(input(f"\nIntento numero {i+1}: "))
    
    if intento == numero_aleatorio:
        print("EL NUMERO INGRESADO ES CORRECTO, FELICITACIONES!")

    elif intento > numero_aleatorio:
        print("El numero es menor, vuelve a intentarlo.")
    else:
        print("El numero es mayor, vuelve a intentarlo.")

Ejercicio 6: """

import random

lista = []

for i in range(10):
    lista.append(random.randint(10,50))

resultado = " - ".join(str(n) for n in lista)

print(resultado)
