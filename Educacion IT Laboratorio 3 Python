# Ejercicio 1:

def mostrar_estrellas(cantidad):
    for i in range(1, cantidad + 1):
        print("*" * i)

mostrar_estrellas(6)

# Ejercicio 2: 

def sumar(a, b):
    return a + b

primer = int(input("Elija el primer numero a sumar: "))
segundo = int(input("Elija el segundo numero a sumar: "))

resultado = sumar(primer, segundo)

print("El resultado es:",resultado) 

# Ejercicio 3: 

def funcion_rango(a, b, c):
    for i in range(a, b, c):
        print(i)

funcion_rango(1, 10, 2)

#Ejercicio 4:

def es_capicua(lista):
    lista_invertida = lista[::-1]

    return lista_invertida == lista

listas = []

cant_numeros = int(input("Indicar numeros a ingresar: "))

for i in range(cant_numeros):
    numero = int(input("Ingrese un numero: "))
    listas.append(numero)

if es_capicua(listas):
    print(f"La lista es: {listas} y es capicua")
else:
    print(f"La lista es: {listas} y no es capicua")
